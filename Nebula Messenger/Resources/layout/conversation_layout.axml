<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/constraintLayout">
	<Button
		android:text="Add Members"
		android:layout_marginEnd="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/addMembersButton"
		android:textColor="@color/colorAccentMediumDark" 
		android:background="#0000"
		android:visibility="gone"
		app:layout_constraintTop_toTopOf="@+id/constraintLayout"
		app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
	/>
	<ListView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/messageListView"
		android:divider="@null"
		android:dividerHeight="0dp"
		android:background="#fff"
		app:layout_constraintTop_toTopOf="@+id/constraintLayout"
		app:layout_constraintBottom_toTopOf="@+id/currentlyTypingView" />
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/currentlyTypingView"
		android:padding="7dp"
		android:background="#2000"
		android:visibility="gone"
		app:layout_constraintBottom_toTopOf="@+id/bottomLayout" />
	/>
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/bottomLayout"
		android:orientation="horizontal"
		android:background="#fff"
		android:elevation="4dp" 
		app:layout_constraintBottom_toBottomOf="@+id/constraintLayout">
		<EditText
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:minHeight="40dp"
			android:maxHeight="150dp"
			android:id="@+id/newMessageView"
			android:hint="New Message"
			android:padding="15dp"
			android:inputType="textCapSentences|textMultiLine"
			app:layout_constraintBottom_toBottomOf="@+id/bottomLayout"
			app:layout_constraintStart_toStartOf="@+id/bottomLayout"
			app:layout_constraintEnd_toStartOf="@+id/sendMessageButton"/>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sendMessageButton"
			app:layout_constraintEnd_toEndOf="@+id/bottomLayout"
			app:layout_constraintBottom_toBottomOf="@+id/newMessageView"
			android:src="@drawable/sharp_send_black_36"
			android:background="#0000"
			android:tint="@color/colorAccent"
			android:padding="6dp" />
	</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>